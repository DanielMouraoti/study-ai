{
  "manifest_version": 3,
  "name": "Study AI",
  "version": "1.0",
  "description": "Timer Pomodoro inteligente com checklist e persistÃªncia.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "offscreen", "identity"],
  "host_permissions": [
    "https://api.spotify.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.spotify.com https://accounts.spotify.com"
  },
  "oauth2": {
    "client_id": "YOUR_SPOTIFY_CLIENT_ID_HERE",
    "scopes": ["user-read-playback-state", "user-modify-playback-state", "user-read-currently-playing"]
  }
}